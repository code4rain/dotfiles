[user]
	email = alex.jang@samsung.com
	name = Alex Kyoungdon Jang
[color]
	ui = auto
	status = auto
	branch = auto
[alias]
	b ="!tig blame"
	bb = "!git for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(color:red)%(objectname:short)%(color:reset);%(color:yellow)%(refname:short)%(color:reset);(%(color:green)%(committerdate:relative)%(color:reset));%(authorname);%(contents:subject)' | column -t -s ';'"
	bf = !tig refs
	br = branch -avv
	cch = !~/.git_template/hooks/checkpatch.pl --no-tree --file
	ch = !git diff --cached | ~/.git_template/hooks/checkpatch.pl --max-line-length=120 --showtypes -q -
	check = !~/.git_template/hooks/checkpatch.pl --max-line-length=120 --git
	ci = commit -v -s
	cl = clean -df
	clf = clean -fX
	cm = commit -v -s -a -m
	co = checkout
	d = diff -b
	dc = diff -b --cached
	distclean = clean -dfX
	fix = commit -s --amend -C HEAD
	glog = log --graph --abbrev-commit --decorate=full --stat
	gtags = !.git/hooks/gtags
	l = !tig
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%ae>%Creset' --abbrev-commit --date=relative
	ll = log --abbrev-commit --decorate=full --stat
	pl = !git tag --force _ribbon HEAD && git pull --rebase && tig _ribbon..HEAD
	pr = !git tag --force _ribbon HEAD && git pull --rebase
	rb = "!f() { git rebase -i HEAD~$1; }; f"
	ri = tag --force _ribbon HEAD
	rst = reset --hard HEAD^
	rt = reset --hard HEAD
	s ="!tig status"
	sh = !tig show
	sl = !tig _ribbon..HEAD
	ss = stash
	ssh = stash show -p
	ssl = stash list
	ssv = stash save
	st = status
	sub = !git submit
	tl = !tig $(git show-ref --tags --abbrev=0 | grep -w -B 1 $(git describe) | head -1 | cut -d ' ' -f1)..HEAD
	top = log --graph --abbrev-commit --decorate=full --branches --simplify-by-decoration
	ts ="!tig stash"
[core]
	editor = vim #vi을 editor로 설정
	quotepath = off
	pager = diff-highlight | less
[i18n]
	logOutputEncoding = utf8
	commitEncoding = utf8
[http]
