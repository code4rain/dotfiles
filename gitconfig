[grep]
	lineNumber = true
[color "grep"]
	linenumber = green
	filename = blue
	function = black
	match = yellow
[bash]
	showDirtyState = true
[init]
	templatedir = ~/.git_template
[push]
	default = simple
[diff]
	compactionHeuristic = true
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[interactive]
	diffFilter = diff-highlight
